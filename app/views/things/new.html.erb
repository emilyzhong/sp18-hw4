<h3> Create a task </h3>
<%= form_tag todos_path do%>
  <%= label_tag(:task_name, "Task name") %>
  <%= text_field_tag(:task_name) %>

  <%= label_tag(:finished, "Finished?") %>
  <%= check_box_tag :finished %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <br>
  <%= submit_tag("Create Task") %>
<% end %>